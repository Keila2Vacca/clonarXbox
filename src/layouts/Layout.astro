---
const { title } = Astro.props;

import { Icon } from "astro-icon/components";

const items = [
	{
		icon: "",
		name: "opción 1",
	},
	{
		icon: "",
		name: "opción 2",
	},
	{
		icon: "",
		name: "opción 3",
	},
];
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body>
		<header class="container max-w-7xl mx-auto h-16 flex items-center">
			<div class="flex space-x-4">
				<img
					class="h-6"
					src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/96/Microsoft_logo_%282012%29.svg/1024px-Microsoft_logo_%282012%29.svg.png"
					alt="Logo de Microsoft"
				/>
				<div class="w-[2px] h-8 bg-slate-800"></div>
				<img
					class="h-6"
					src="/public/XBOX_LOGO.PNG"
					alt="Logo de Xbox"
				/>
			</div>
			<menu class="ml-8">
				<div class="flex items-center">
					<a
						class="hover:underline underline-offset-[6px] decoration-2"
						href="#"
					>
						Game Pass
					</a>

					<Icon name="mdi:chevron-down" />
				</div>
			</menu>
		</header>
		<div class="relative">
			<div class="absolute left-28 h-full flex items-center">
				<h1 class="text-white text-5xl font-bold">
					FINAL FANTASY XIV
				</h1>
			</div>

			<video
				aria-label="Ambient video alt text"
				poster="https://assets.xboxservices.com/assets/45/5a/455a189b-0e7a-48bc-a966-9bf5ec8c08c2.jpg?n=896254_Page-Hero-1084_1920x720_01.jpg"
				muted=""
				autoplay=""
				loop=""
				alt="Video de FINAL FANTASY XIV Online con imágenes del juego y cinemáticas"
				><source
					class="heroImgDesktop"
					src="https://assets.xboxservices.com/assets/12/ff/12ff90f8-439f-42a6-892b-1bf80f02f027.mp4?n=FFXIV-Online_HP-Video_1920x720_04.mp4"
					type="video/mp4"
					srcset="https://assets.xboxservices.com/assets/12/ff/12ff90f8-439f-42a6-892b-1bf80f02f027.mp4?n=FFXIV-Online_HP-Video_1920x720_04.mp4"
				/>
			</video>
		</div>
		<nav>
			{
				items.map((item) => (
					<a href="#" class="option">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="24"
							height="24"
							viewBox="0 0 24 24"
							style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"
						>
							<path d="M21 10a3.58 3.58 0 0 0-1.8-3 3.66 3.66 0 0 0-3.63-3.13 3.86 3.86 0 0 0-1 .13 3.7 3.7 0 0 0-5.11 0 3.86 3.86 0 0 0-1-.13A3.66 3.66 0 0 0 4.81 7 3.58 3.58 0 0 0 3 10a1 1 0 0 0-1 1 10 10 0 0 0 5 8.66V21a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1v-1.34A10 10 0 0 0 22 11a1 1 0 0 0-1-1zM5 10a1.59 1.59 0 0 1 1.11-1.39l.83-.26-.16-.85a1.64 1.64 0 0 1 1.66-1.62 1.78 1.78 0 0 1 .83.2l.81.45.5-.77a1.71 1.71 0 0 1 2.84 0l.5.77.81-.45a1.78 1.78 0 0 1 .83-.2 1.65 1.65 0 0 1 1.67 1.6l-.16.85.82.28A1.59 1.59 0 0 1 19 10z" />
						</svg>
						{item.name}
					</a>
				))
			}
		</nav>
		<slot />
	</body>
</html>
<style is:global>
	.option {
		text-decoration: none;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		width: 80px;
		height: 100%;

		&:hover {
			text-decoration: underline; 
			underline-offset: 6px; 
			text-decoration:2;
		}
	}
	nav {
		height: 60px;
		display: flex;
	}
	header {
		height: 30px;
	}
	html,
	body {
		font-family: system-ui, sans-serif;
		padding: 0;
		margin: 0;
	}
	
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
