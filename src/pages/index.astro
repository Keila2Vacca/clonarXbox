	}
	.img7 {
		grid-area: img7;
		background-image: url('https://assets.xboxservices.com/assets/a5/2a/a52ae26b-b534-4c48-bfdc-6afca86497a7.jpg?n=Elder-Scrolls-Online_Small-tout-1084_Scions-of-Ithelia_475x534_01.jpg');
	}
	.img8 {
		grid-area: img8;
		background-image: url('https://assets.xboxservices.com/assets/b4/e6/b4e673ea-98c6-486d-998b-49466ba912f7.jpg?n=South-Park-Snow-Day_Small-tout-1084_475x534_02.jpg');
	}
	.img9 {
		grid-area: img9;
		background-image: url('https://assets.xboxservices.com/assets/5b/84/5b846e1c-cb13-4fed-87e3-38a14e293d76.jpg?n=63789251_Large-tout-0_1083x1222.jpg');
	}
	.img10 {
		grid-area: img10;
		background-image: url('https://assets.xboxservices.com/assets/d7/58/d758c74c-21f4-4c61-a43e-e20756272a3a.jpg?n=896254_Large-tout-0_1083x1222_01.jpg');
	}
	.footer {
		display: grid;
		grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr 1fr;
		grid-template-rows: 1fr;
		grid-template-areas: "col1 col2 col3 col4 col0 col0 col0";
		background-color: #dbe6e7;
		padding: 80px;
		gap: 10px;
		justify-content: center;

	}
	p:hover {
			text-decoration: underline;
			underline-offset: 6px;
			text-decoration-line: 2px;
		}


	.col1 {
		grid-area: col1;
		text-align: left;
		margin-right: 10px;
	}

	.col2 {
		grid-area: col2;
		text-align: left;
		margin-right: 10px;
	}

	.col3 {
		grid-area: col3;
		text-align: left;
		margin-right: 10px;
	}

	.col4 {
		grid-area: col4;
		text-align: left;
		margin-right: 10px;
	}
</style>
