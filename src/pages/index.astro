---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Welcome to Xbox">
	<div class="container">
		<div class="wrapper">
			<div class="box img1">img1</div>
			<div class="box img2">img2</div>
			<div class="box img3">img3</div>
			<div class="box img4">img4</div>
			<div class="box img5">img5</div>
			<div class="box img6">img6</div>
			<div class="box img7">img7</div>
			<div class="box img8">img8</div>
			<div class="box img9">img9</div>
			<div class="box img10">img10</div>
		</div>
	</div>
</Layout>
<footer class="footer">
	<div class="col1">
		<h3 class="font-bold">Examinar</h3>
		<a href="#">
			<p>Xbox consolas</p>
			<p>Juegos de Xbox</p>
			<p>Xbox Game Pass</p>
			<p>Accesorios para Xbox</p>
		</a>
		
	</div>
	<div class="col2">
		<h3 class="font-bold">Recursos</h3>
		<a href="#">
			<p>Noticias de Xbox</p>
			<p>Soporte técnico de Xbox</p>
			<p>Comentarios</p>
			<p>Estándares de la comunidad</p>
			<p>Advertencia sobre ataque fotosensibles</p>
		</a>
		
	</div>
	<div class="col3">
		<h3 class="font-bold">Microsoft Store</h3>
		<a href="#">
	    <p>Cuenta de Micrisoft</p>
		<p>Soporte técnico de Microsoft Store</p>
		<p>Devoluciones</p>
		<p>Seguimiento de pedidos</p>
		</a>

	</div>
	<div class="col4">
		<h3 class="font-bold">Para desarrolladores</h3>
		<a href="#">
			<p>Juegos</p>
		</a>
	</div>
</footer>
<style>
	.wrapper {
		display: grid;
		grid-template-rows: 300px 300px 300px 300px 300px 300px 300px;
		grid-template-areas:
			"img1 img1 img2 img2"
			"img1 img1 img4 img4"
			"img3 img3 img4 img4"
			"img5 img5 img6 img6"
			"img7 img7 img8 img8"
			"img9 img9 img10 img10"
			"img9 img9 img10 img10";
	}
	.box {
		display: flex;
		font-family: Verdana, Geneva, Tahoma, sans-serif;
		align-items: center;
		justify-content: center;
		font-weight: bold;
		color: white;
	}
	.img1 {
		grid-area: img1;
		background-image: url('https://assets.xboxservices.com/assets/7c/b2/7cb25873-2a92-47db-998c-cbeebe79b509.jpg?n=Dragons-Dogma-II_Large-tout-0_1083x1222.jpg');
	}
	.img2 {
		grid-area: img2;
		background-image: url('https://assets.xboxservices.com/assets/e0/33/e0330338-5ef6-446e-9f9c-185dee575f6f.jpg?n=XGP-2023_Small-tout-1084_09-18-23_475x534.jpg');
	}
	.img3 {
		grid-area: img3;
		background-image: url('https://assets.xboxservices.com/assets/47/04/4704bd8f-cbf6-4408-9af5-a5b10d8f8c57.jpg?n=Fallout-76_Small-tout-1084_Atlantic-City-Pt2_475x534.jpg');
	}
